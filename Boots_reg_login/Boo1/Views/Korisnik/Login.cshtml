@model Boo1.Models.KorisnikModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Login nije uspio provjerite detalje")
    <div>
        <fieldset>
            <legend>Login form</legend>
            <div> @Html.LabelFor(u=> u.username)</div>
            <div> @Html.TextBoxFor(u=> u.username)
                @Html.ValidationMessageFor(u=> u.username)
            </div>


            <div> @Html.LabelFor(u=>u.password)</div>
            <div> @Html.PasswordFor(u=> u.password)
                @Html.ValidationMessageFor(u=> u.password)
            </div>
            

            <input type="submit" value="Log In"  />
            
        </fieldset>
    </div>
}
